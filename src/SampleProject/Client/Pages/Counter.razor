@page "/counter"


<div class="bx--content">
    <BxGrid>
        <BxRow>
            <BxCol overflow="lg-3" lg="13">
                <h3>Counter</h3>
                <p>Current count: @currentCount</p>
                <button class="bx--btn bx--btn--primary" @onclick="IncrementCount">Click me</button>
            </BxCol>
        </BxRow>
    </BxGrid>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
